   <select id="findBestList" resultMap="boardMap">
        select
          b.bno,
          b.title,
          m.name,
          b.vw_cnt,
          b.cateno
        from 
          board b
          join member m on b.mno = m.mno
          join board_category bc on b.cateno = bc.cateno
        order by 
          vw_cnt desc
        limit 0, 10;
  </select>
  
   <select id="findClgList" resultMap="boardMap">
      select
        b.bno,
        b.title,
        m.name,
        b.cdt,
        bf.filepath
      from 
        board b
        join member m on b.mno = m.mno
        join board_category bc on b.cateno = bc.cateno
        left join board_file bf on b.bno = bf.bno
      where
        b.cateno = 3
      group by
        b.bno
      order by 
        b.bno desc
      limit 0, 6
  </select>
  
  <select id="findAll" resultMap="boardMap" parameterType="criteria">
     <![CDATA[
		    select
 		      b.bno,
		      b.title,
		      m.name,
		      b.cdt,
		      b.vw_cnt,
		      b.cateno,
		      bf.filepath
		    from 
		      board b
		      join member m on b.mno = m.mno
		      join board_category bc on b.cateno = bc.cateno
		      left join board_file bf on b.bno = bf.bno
		    where
		      b.cateno = #{catenoToPage}
        group by
          b.bno
		    order by 
		      bno desc
		    limit #{pagesStart}, #{perPageNum}
		  ]]>
  </select>
  
  <select id="findListTotalCount" resultType="Integer">
    select 
      count(*) 
    from 
      board 
    where 
      cateno = #{value}
  </select>
  
  <insert id="insert" parameterType="board"
          useGeneratedKeys="true" keyColumn="bno" keyProperty="no">
    insert into board(cateno,mno,title,cont) 
    values(#{cateno},1,#{title},#{content})
  </insert>
  
  <insert id="insertFiles" parameterType="board">
    insert into board_file(filepath,bno)
    values
    <foreach collection="attachedFiles" item="boardFile" separator=",">
      (#{boardFile.filepath},#{no})
    </foreach>
  </insert>
  
  <select id="findByNo" resultMap="boardMap">
    select
      b.bno,
      b.cateno,
      b.title,
      b.cont,
      m.name,
      b.cdt,
      b.vw_cnt,
      bf.filepath
    from 
      board b
      join member m on b.mno = m.mno
      left join board_file bf on b.bno=bf.bno
    where
      b.bno = #{value}
    order by 
      bno desc
  </select>
  
  <delete id="deleteFiles">
    delete from board_file
    where bno=#{value}
  </delete>
  
  <delete id="delete">
    delete from board 
    where bno=#{value}
  </delete>
  
  <update id="update" parameterType="board">
    update board set 
      title=#{title}, 
      cont=#{content} 
    where bno=#{no}
  </update>
  
  <select id="findFileByNo" resultMap="attachedFileMap">
    select 
      bfno, 
      filepath, 
      bno 
    from 
      board_file 
    where 
      bfno = #{value}
  </select>
  
  <delete id="deleteFile">
    delete from board_file 
    where bfno=#{value}
  </delete>

  <update id="increaseViews">
    update 
      board 
    set 
      vw_cnt = vw_cnt + 1
    where bno=#{value}
  </update>
  
  <select id="findCategoryByNo" resultMap="boardCategoryMap">
    select 
      cateno, 
      name
    from 
      board_category
    where 
      cateno = #{value}
  </select>


</mapper>



